<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundBlue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="topIcon">@color/greyNight</item>
        <item name="crossIcon">@color/greyNight</item>
        <item name="payButtonIcon">@color/black</item>
    </style>

    <style name="ButtonPay" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/greenNight</item>
    </style>

    <style name="MainTitleNight" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/greenNight</item>
    </style>

    <style name="TotalOrderNight" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/yellowNight</item>
    </style>

    <style name="MyTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="MyButtonRegisterOnCard" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/backgroundBlue</item>
    </style>

    <style name="MyButtonRegister" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textDark</item>
    </style>

</resources>